<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#6699FF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:padding="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="5dp"
            android:orientation="horizontal"
            >

            <Button
                android:id="@+id/btn_edit_back"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginLeft="5dp"
                android:background="@drawable/ic_back"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_weight="1"
                android:gravity="center"
                android:text="学生信息编辑"
                android:textColor="@color/white"
                android:textSize="25sp"
                />

            <Button
                android:id="@+id/btn_edit_sure"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/ic_sure"/>
        </LinearLayout>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25sp"
            android:background="@color/white"
            android:focusableInTouchMode="true"
            android:orientation="vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            >


            <TableRow
                android:layout_width="wrap_content"
                android:padding="10dp">

                <TextView
                    android:text="学号"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    />

                <EditText
                    android:id="@+id/et_edit_number"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="8"
                    android:digits="0123456789"
                    tools:text="20158888144"/>

            </TableRow>


            <TableRow
                android:padding="10dp">

                <TextView
                    android:text="姓名"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    />

                <EditText
                    android:id="@+id/et_edit_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="8"
                    tools:text="白齐辉"/>
            </TableRow>

            <TableRow
                android:id="@+id/tr_edit_gender"
                android:background="@drawable/selector_white_button_style"
                android:padding="10dp">

                <TextView
                    android:text="性别"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    />

                <TextView
                    android:id="@+id/tv_edit_gender"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="8"
                    tools:text="男"/>

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@drawable/icon_next"/>
            </TableRow>


            <TableRow
                android:id="@+id/tr_edit_birth"
                android:background="@drawable/selector_white_button_style"
                android:padding="10dp">

                <TextView
                    android:text="生日"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    />

                <TextView
                    android:id="@+id/tv_edit_birth"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="8"
                    tools:text="1983年10月11日"/>

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@drawable/icon_next"/>

            </TableRow>


            <TableRow
                android:padding="10dp">

                <TextView
                    android:text="籍贯"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    />

                <EditText
                    android:id="@+id/et_edit_native_place"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="8"
                    tools:text="江苏"/>
            </TableRow>


            <TableRow
                android:padding="10dp">

                <TextView
                    android:text="专业"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    />

                <EditText
                    android:id="@+id/et_edit_specialty"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="8"
                    tools:text="计算机科学与技术"/>
            </TableRow>


            <TableRow
                android:padding="10dp">

                <TextView
                    android:text="手机"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    />

                <EditText
                    android:id="@+id/et_edit_phone"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="8"
                    android:digits="0123456789+()"
                    tools:text="15623333333"/>
            </TableRow>

            <View
                style="10dp"/>
        </TableLayout>

        <TextView
            android:id="@+id/tv_edit_delete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/selector_white_button_style"
            android:paddingBottom="25dp"
            android:paddingLeft="25dp"
            android:paddingTop="25dp"
            android:text="删除该学生信息"
            android:textColor="@android:color/holo_red_light"
            android:textSize="20sp"/>
    </LinearLayout>
</ScrollView>